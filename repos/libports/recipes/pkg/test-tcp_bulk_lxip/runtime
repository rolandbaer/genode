<runtime ram="280M" caps="2500" binary="init">

	<requires> <timer/> </requires>

	<fail after_seconds="120"/>
	<succeed>child "sequence" exited with exit value 0</succeed>

	<content>
		<rom label="ld.lib.so"/>
		<rom label="libc.lib.so"/>
		<rom label="libm.lib.so"/>
		<rom label="posix.lib.so"/>
		<rom label="vfs.lib.so"/>
		<rom label="vfs_lxip.lib.so"/>
		<rom label="lxip.lib.so"/>
		<rom label="nic_bridge"/>
		<rom label="nic_loopback"/>
		<rom label="vfs"/>
		<rom label="test-tcp"/>
		<rom label="sequence"/>
	</content>

	<config verbose="yes">
		<parent-provides>
			<service name="ROM"/>
			<service name="PD"/>
			<service name="RM"/>
			<service name="CPU"/>
			<service name="LOG"/>
			<service name="Timer"/>
		</parent-provides>
		<default-route>
			<any-service> <parent/> <any-child/> </any-service>
		</default-route>
		<start name="nic_loopback" caps="200" ram="1M">
			<provides> <service name="Nic"/> </provides>
		</start>
		<start name="nic_bridge" caps="200" ram="10M">
			<provides><service name="Nic"/></provides>
			<config verbose="no">
				<policy label_prefix="sequence -> local -> recv" ip_addr="192.168.1.1"/>
				<policy label_prefix="sequence -> local -> send" ip_addr="192.168.1.2"/>
				<policy label_prefix="sequence -> remote -> recv_fs" ip_addr="192.168.1.1"/>
				<policy label_prefix="sequence -> remote -> send_fs" ip_addr="192.168.1.2"/>
			</config>
			<route>
				<service name="Nic"> <child name="nic_loopback"/> </service>
				<any-service> <parent/> <any-child/> </any-service>
			</route>
		</start>

		<start name="sequence" caps="1800" ram="100M">
			<config>

				<start name="local" caps="800">
					<binary name="init"/>
					<config>
						<parent-provides>
							<service name="ROM"/>
							<service name="PD"/>
							<service name="RM"/>
							<service name="CPU"/>
							<service name="LOG"/>
							<service name="Timer"/>
							<service name="Nic"/>
						</parent-provides>
						<default-route>
							<any-service> <parent/> <any-child/> </any-service>
						</default-route>
						<default caps="256"/>

						<start name="recv" ram="16M">
							<binary name="test-tcp"/>
							<exit propagate="yes"/>
							<config>
								<arg value="recv"/>
								<libc stdout="/log" stderr="/log" socket="/socket"/>
								<vfs>
									<log/>
									<dir name="socket">
										<lxip ip_addr="192.168.1.1" netmask="255.255.255.0"/>
									</dir>
								</vfs>
							</config>
						</start>

						<start name="send" ram="16M">
							<binary name="test-tcp"/>
							<config>
								<arg value="send"/>
								<arg value="192.168.1.1"/>
								<libc stdout="/log" stderr="/log" socket="/socket"/>
								<vfs>
									<log/>
									<dir name="socket">
										<lxip ip_addr="192.168.1.2" netmask="255.255.255.0"/>
									</dir>
								</vfs>
							</config>
						</start>
					</config>
				</start>

				<start name="remote" caps="800">
					<binary name="init"/>
					<config>
						<parent-provides>
							<service name="ROM"/>
							<service name="PD"/>
							<service name="RM"/>
							<service name="CPU"/>
							<service name="LOG"/>
							<service name="Timer"/>
							<service name="Nic"/>
						</parent-provides>
						<default-route>
							<any-service> <parent/> <any-child/> </any-service>
						</default-route>
						<default caps="200"/>

						<start name="recv_fs" ram="10M">
							<binary name="vfs"/>
							<provides> <service name="File_system"/> </provides>
							<config>
								<vfs>
									<dir name="socket"> <lxip ip_addr="192.168.1.1" netmask="255.255.255.0"/> </dir>
								</vfs>
								<default-policy writeable="yes" root="/"/>
							</config>
						</start>

						<start name="send_fs" ram="10M">
							<binary name="vfs"/>
							<provides> <service name="File_system"/> </provides>
							<config>
								<vfs>
									<dir name="socket"> <lxip ip_addr="192.168.1.2" netmask="255.255.255.0"/> </dir>
								</vfs>
								<default-policy writeable="yes" root="/"/>
							</config>
						</start>

						<start name="recv" ram="10M">
							<binary name="test-tcp"/>
							<exit propagate="yes"/>
							<config>
								<arg value="recv"/>
								<libc stdout="/log" stderr="/log" socket="/socket"/>
								<vfs>
									<log/>
									<fs/>
								</vfs>
							</config>
							<route>
								<service name="File_system"> <child name="recv_fs"/> </service>
								<any-service> <parent/> <any-child/> </any-service>
							</route>
						</start>

						<start name="send" ram="10M">
							<binary name="test-tcp"/>
							<config>
								<arg value="send"/>
								<arg value="192.168.1.1"/>
								<libc stdout="/log" stderr="/log" socket="/socket"/>
								<vfs>
									<log/>
									<fs/>
								</vfs>
							</config>
							<route>
								<service name="File_system"> <child name="send_fs"/> </service>
								<any-service> <parent/> <any-child/> </any-service>
							</route>
						</start>
					</config>
				</start>

			</config>
			<route>
				<service name="Nic"> <child name="nic_bridge"/> </service>
				<any-service> <parent/> <any-child/> </any-service>
			</route>
		</start>
	</config>
</runtime>
