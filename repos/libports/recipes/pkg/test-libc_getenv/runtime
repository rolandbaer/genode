	<fail after_seconds="30"/>
	<succeed>
			[init -> test-libc_getenv] foo="bar"*
			[init -> test-libc_getenv] bar="foo"*
			[init -> test-libc_getenv] no env variable named 'baz'*
			[init -> test-libc_getenv] fitz=" with leading space"*
			[init -> test-libc_getenv] fatz="with trailing space "*
			[init -> test-libc_getenv] no env variable named ' arg with surrounding spaces '*
			[init] child "test-libc_getenv" exited with exit value 0
	</succeed>

	<content>
		<rom label="ld.lib.so"/>
		<rom label="test-libc_getenv"/>
		<rom label="libc.lib.so"/>
		<rom label="libm.lib.so"/>
