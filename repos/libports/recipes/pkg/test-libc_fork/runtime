<runtime ram="32M" caps="1000" binary="init">

	<requires> <timer/> </requires>

	<fail after_seconds="30"/>
	<succeed>--- parent done ---*child*exited*</succeed>

	<content>
		<rom label="ld.lib.so"/>
		<rom label="libc.lib.so"/>
		<rom label="libm.lib.so"/>
		<rom label="posix.lib.so"/>
		<rom label="vfs.lib.so"/>
		<rom label="vfs"/>
		<rom label="test-fork"/>
	</content>

	<config verbose="yes">
		<parent-provides>
			<service name="ROM"/>
			<service name="LOG"/>
			<service name="CPU"/>
			<service name="PD"/>
		</parent-provides>
		<start name="test-fork" caps="500" ram="1G">
			<config>
				<arg>name_of_executeable</arg>
				<env name="WIZARD">gandalf</env>
				<libc stdin="/null" stdout="/log" stderr="/log">
					<fd id="3" path="/seek_test" readable="yes" seek="5"/>
				</libc>
				<vfs>
					<null/> <log/>
					<inline name="seek_test">0123456789</inline>
				</vfs>
			</config>
			<route> <any-service> <parent/> </any-service> </route>
		</start>
	</config>

</runtime>
